; -*- mode: conf-windows; coding: windows-1251-dos -*-

; Переопределить некоторые параметры гулагов.
[dsh.gulag.override.agr_factory_hold]
; Военные на Агропроме, в здании с Адреналином
cond = {-agr_help_krot_done}

[dsh.gulag.override.agr2_st_factory]
; Сталкеры на Агропроме
communities = stalker, freedom
dsh_walking = true

[dsh.gulag.override.agr2_bandit_st]
; Бандиты на Агропроме, которые нападают на сталкеров
dsh_walking          = true
dsh_walking_keep_min = 6
switch_0 =
switch_1 =

[dsh.gulag.override.agr2_dogs_st_3]
; собаки около прицепа (у болота)
dsh_walking = true

[dsh.gulag.override.agr2_bloodsucker_lair1]
; псевдособаки рядом с переходом на Янтарь и котами
dsh_walking = true

[dsh.gulag.override.agr2_pseudodog_nest1]
; две псевдособаки у камаза
dsh_walking = true

[dsh.gulag.override.agr2_pseudodog_nest2]
; две псевдособаки у заваленного входа
dsh_walking = true

[dsh.gulag.override.agr_boar_nest]
; 4 кабана рядом с Шерстюком
dsh_walking = true

[dsh.gulag.override.agr_boar_nest_2]
; 2 кабана недалеко от Шерстюка
dsh_walking = true

[dsh.gulag.override.agr2_bloodsucker_lair2]
; кровосос в здании с Адреналином
cond = never ;{+agroprom_military_case_done}


; Военные в НИИ, после чемодана
[dsh.gulag.override.agr2_st_nii]
dsh_walking          = true
dsh_walking_keep_min = 7


[dsh.gulag.override.agr_road_patrol1]
cond            = always ;{-agroprom_military_case_done}
dsh_after_delay = 72, 168 ;от трех суток до недели
dsh_population_locked = true
dsh_profiles    = def
dsh_walking     = true

[dsh.gulag.override.agr_road_patrol1.def]:dsh.gulag.override.agr_road_patrol1


[dsh.gulag.override.agr_road_patrol2]
cond            = always ;{-agroprom_military_case_done}
dsh_after_delay = 72, 168 ;от трех суток до недели
dsh_population_locked = true
dsh_profiles    = def
dsh_walking     = true

[dsh.gulag.override.agr_road_patrol2.def]:dsh.gulag.override.agr_road_patrol2

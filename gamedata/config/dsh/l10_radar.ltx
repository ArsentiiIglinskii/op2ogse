; -*- mode: conf-windows; coding: windows-1251-dos -*-

; Переопределить некоторые параметры гулагов.
[dsh.gulag.override.rad2_loner_0001]
; Сталкеры на Радаре, у костра, недалеко от перехода в Варлаб
communities = stalker, green, dolg
dsh_walking = true

[dsh.gulag.override.rad2_loner_0000]
; Сталкеры на Радаре, у костра, в середине пути к Выжигателю
dsh_walking = true

[dsh.gulag.override.rad2_loner_0002]
; Сталкеры на Радаре, у костра под стенами Выжигателя
dsh_walking = true

; Сталкеры на Радаре, в лесу
[dsh.gulag.override.sak_radar_lager]
communities = stalkerm green, freedom
dsh_after_delay = 24, 168 ;от суток до недели
dsh_change_profile_on_empty = true
dsh_profiles    = monolith
dsh_walking     = true
dsh_population_locked = true

[dsh.gulag.override.sak_radar_lager.monolith]:dsh.gulag.override.sak_radar_lager
communities = monolith

; Монолитовцы на Радаре
[dsh.gulag.override.rad_antenna_monolith]
cond = {-rad_start_svoboda_vs_dolg}, {+rad_start_svoboda_vs_dolg =dsh_is_smart_empty(rad_antenna_specnaz)}

[dsh.gulag.override.rad_antenna_patrol]
; Монолитовцы на Радаре, которые раньше всегда трупиками были
cond = {-rad_start_svoboda_vs_dolg}, {+rad_start_svoboda_vs_dolg =dsh_is_smart_empty(rad_antenna_specnaz)}

;[dsh.gulag.override.rad_prip_road]
; монолитовцы у перехода в Припять

; монолитовцы у перехода в ТД
[dsh.gulag.override.rad2_prip_teleport]
dsh_after_delay = 24, 72 ;от суток до 3
dsh_change_profile_on_empty = true
dsh_profiles    = monolith, bandit
dsh_walking     = true

[dsh.gulag.override.rad2_prip_teleport.monolith]:dsh.gulag.override.rad2_prip_teleport

[dsh.gulag.override.rad2_prip_teleport.bandit]:dsh.gulag.override.rad2_prip_teleport
capacity    = 5 ;12
communities = bandit ;monolith
switch_0    = ;{!is_day}
switch_1    = ;{=is_day =gulag_population_ge(rad2_prip_teleport:5)}

; Военные на Радаре
[dsh.gulag.override.rad_antenna_specnaz]
cond = {-rad_start_svoboda_vs_dolg}, {+rad_start_svoboda_vs_dolg =dsh_is_smart_empty(rad_antenna_monolith) =dsh_is_smart_empty(rad_antenna_patrol)}

[dsh.gulag.override.rad_mil_entrance]
; военные у перехода на АС
dsh_walking = true

[dsh.gulag.rad_pseudodogs]
; псевдособаки в Ржавом лесу, у вертолета
; теперь пусть будет кто угодно
communities =

[dsh.gulag.rad_zombied1]
; зомбированные в Рыжем лесу
dsh_walking = true

[dsh.gulag.rad_zombied2]
; зомбированные в Рыжем лесу
dsh_walking = true

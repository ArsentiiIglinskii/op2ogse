; Переопределить некоторые параметры гулагов.
[dsh.gulag.override.val_smart_monster_lair_2]
; Три собаки в ТД, между постом долга и фермой
capacity = 6 ;3

[dsh.gulag.override.val_smart_bandit_1]
; Сталкеры в ТД, на ферме
communities = stalker, green
dsh_walking = true

[dsh.gulag.override.val_smart_bandit_2]
; Бандиты в ТД, которые нападают на пост Долга
cond = never ;{+val_borov_dead}

[dsh.gulag.override.val_smart_bandit_3]
; Поста Долга в ТД, у перехода со Свалки
dsh_walking          = true
dsh_walking_keep_min = 3

[dsh.gulag.override.val_smart_monster_lair_4]
; собаки у заправки
communities = pseudodog

[dsh.gulag.override.val_smart_monster_lair_8]
; собаки на холме, где вертолет
communities = pseudodog

[dsh.gulag.override.val_smart_monster_lair_7]
; собаки за заправкой
capacity = 10 ;5


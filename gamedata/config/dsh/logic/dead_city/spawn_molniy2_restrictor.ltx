;
; Появление Молнии в МГ

[logic]
active = sr_idle

[sr_idle]
on_actor_inside = {+spawn_city_last_zentr} sr_idle@time

[sr_idle@time]
on_timer = 200 | sr_idle@time1 %+spawn_dead_city_molniy%

[sr_idle@time1]
on_timer = 4000 | sr_idle@time2 %=arhara_dialog.remen_dialog_sms1%

[sr_idle@time2]
on_timer = 14000 | sr_idle@time3 %=arhara_dialog.remen_dialog_sms2%

[sr_idle@time3]
on_timer = 14000 | sr_idle@time4 %=arhara_dialog.remen_dialog_sms3%

[sr_idle@time4]
on_timer = 18000 | sr_idle@time5 %=arhara_dialog.remen_dialog_sms4%

[sr_idle@time5]
on_timer = 14000 | sr_idle@time6 %=arhara_dialog.remen_dialog_sms5%

[sr_idle@time6]
on_timer = 1000 | sr_idle@time7 %+spawn_after_molniy =arhara_dialog.otsek_varka_kamen =arhara_dialog.dell_dcity_molniy%

[sr_idle@time7]
on_timer = 50000 | nil %=arhara_dialog.remen_dialog_sms6 =arhara_dialog.iskra_listok_spawn%

[sr_idle@nil]

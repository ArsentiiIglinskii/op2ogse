; Группа Дуды

[logic]
active = walker
meet = no_meet
combat_ignore = combat_ignore
on_hit = hit
on_death = death

[walker]
path_walk = last2_dokplen_spawn_one2_walk
path_look = last2_dokplen_spawn_one2_look
combat_ignore_cond = {-duda_enemy -spasty_doka_done =fighting_actor}

[hit]
on_info = {-spasty_doka_done =hit_by_actor} %+duda_enemy +spasty_doka_fail%

[death]
on_info = {-spasty_doka_done =killed_by_actor} %+duda_enemy +spasty_doka_fail%

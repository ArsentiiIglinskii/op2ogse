active = sr_idle

[sr_idle]
on_npc_in_zone = 19043 |dcity_rastrell_restrictor| sr_idle@time 

[sr_idle@time]
on_timer = 500 | sr_idle@time1 %+podnyat_oruzhie =arhara_dialog.hand_hoh_sms%

[sr_idle@time1]
on_timer = 6000 | sr_idle@time2 %=arhara_dialog.rasstrel_zvuk_ochered%

[sr_idle@time2]
on_timer = 800 | sr_idle@time3 %+dsity_rasstrel1_umer =arhara_dialog.kill_dsity_rasstrel1%

[sr_idle@time3]
on_timer = 1500 | sr_idle@time4 %=arhara_dialog.rasstrel_zvuk_odinochka%

[sr_idle@time4]
on_timer = 500 | sr_idle@time5 %+dsity_rasstrel2_umer =arhara_dialog.kill_dsity_rasstrel2%

[sr_idle@time5]
on_timer = 2000 | nil %+dsity_rasstrel_end =arhara_dialog.enabl_weapon =arhara_dialog.suki_rasstrel_sms =arhara_dialog.join_stalker =dsh_story_agro_final.story_end%


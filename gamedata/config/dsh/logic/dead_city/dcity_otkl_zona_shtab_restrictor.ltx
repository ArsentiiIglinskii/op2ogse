; Отключение защиты в МГ после разговора с БД

[logic]
active = sr_idle

[sr_idle]
on_info = {+dcity_otkl_zona_shtab} sr_idle@time

[sr_idle@time]
on_timer = 20000 | sr_idle@time1 %=arhara_dialog.sms_otkl_zona1%

[sr_idle@time1]
on_timer = 8000 | sr_idle@time2 %=arhara_dialog.sms_otkl_zona2%

[sr_idle@time2]
on_timer = 80000 | sr_idle@time3 %+spawn_city_last_zentr =arhara_dialog.delete_zaschita_zenter_gorod =arhara_dialog.sms_dcity_zenter_doza_otkl%

[sr_idle@time3]
on_timer = 8000 | sr_idle@time4 %=arhara_dialog.dell_dok_nevidim =arhara_dialog.dell_dcity_dok_vidim =arhara_dialog.sms_otkl_zona3%

[sr_idle@time4]
on_timer = 8000 | sr_idle@time5 %=arhara_dialog.sms_otkl_zona4%

[sr_idle@time5]
on_timer = 6000 | nil %=arhara_dialog.sms_otkl_zona5 +spasty_doka_done%

[sr_idle@nil]

; СМС от Молнии на Агропроме, после Сходки.

[logic]
active = sr_idle

[sr_idle]
on_actor_inside = {+final_agro_kluk_ok_start} sr_idle@time %+naezd_zhuchok%

[sr_idle@time]
on_timer = 10000 | sr_idle@time1 %=arhara_dialog.girl3_nachalo_sms%

[sr_idle@time1]
on_timer = 12000 | sr_idle@time2 %=arhara_dialog.girl3_nachalo_sms1%

[sr_idle@time2]
on_timer = 10000 | sr_idle@time3 %=arhara_dialog.girl3_nachalo_sms2%

[sr_idle@time3]
on_timer = 8000 | nil %=arhara_dialog.girl3_nachalo_sms3%

[sr_idle@nil]

function attach(sm)
  sm:subscribe({ signal = "on_key_down", fun = this.on_key_down} )
end

function on_key_down( key, bind )
  if key == ogse_rebind_key.get_key_preset_value( "night_vision_key" ) then
    hotkeys.pnv()
    return true
  elseif key == ogse_rebind_key.get_key_preset_value( "reminds_key" ) then
    hotkeys.reminds()
    return true
  elseif key == ogse_rebind_key.get_key_preset_value( "runner_key" ) then
    hotkeys.runner()
    return true
  end
end

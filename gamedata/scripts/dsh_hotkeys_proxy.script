function attach(sm)
  sm:subscribe({ signal = "on_key_down", fun = this.on_key_down} )
end

function on_key_down( key, bind )
  if bind == key_bindings.kNIGHT_VISION then
    hotkeys.pnv()
    return true
  elseif bind == key_bindings.kSCORES then
    hotkeys.reminds()
    return true
  elseif bind == key_bindings.kCAM_4 then
    hotkeys.runner()
    return true
  end
end

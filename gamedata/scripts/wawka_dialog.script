-- Создание диалога Ворона
local have_weapon, have_good_wpn

function init_mosinka_dialog( dlg )
  local phr = dlg:AddPhrase( "mosinka_0", "0", "", -10000 )
  local phrase_script = phr:GetPhraseScript()
  phrase_script:AddGiveInfo( "price_voron_mosin" )
  phr = dlg:AddPhrase( "mosinka_1", "1", "0", -10000 )

  have_good_wpn, have_weapon = find_good_wpn()
  for i, sect in ipairs( have_weapon ) do
    phr = dlg:AddPhrase(
      voron_text_give[ math.random( table.getn( voron_text_give ) ) ][ 1 ]
        .. game.translate_string( get_string( sect, "inv_name" ) )
        .. voron_text_give[ math.random( table.getn( voron_text_give ) ) ][ 2 ],
      tostring( 1000 + i ), "1", -10000
    )
    phrase_script = phr:GetPhraseScript()
    phrase_script:AddPrecondition( "wawka_dialog.v_have_good_wpn" )
    phr = dlg:AddPhrase(
      voron_text_take[ math.random( table.getn( voron_text_take ) ) ],
      tostring( 2000 + i ), tostring( 1000 + i ), -10000
    )
    phrase_script = phr:GetPhraseScript()
    phrase_script:AddAction( "wawka_dialog.v_take_wpn" )
  end
  phr = dlg:AddPhrase( "mosinka_9999", "9999", "1", -10000 )
end


function find_good_wpn()
  local items, sects = {}, {}
  db.actor:iterate_inventory(
    function( npc, item )
      if item:is_weapon() then
        local sect = item:section()
        if
          get_u32( sect, script_name() .. ".voron_wpn", 0 ) > 0
          and item:condition() > v_wpn_cond
        then
          if items[ sect ] then
            table.insert( items[ sect ], item )
          else
            items[ sect ] = { item }
            table.insert( sects, sect )
          end
        end
      end
    end,
    db.actor
  )
  return items, sects
end


function v_have_good_wpn( fs, ss, dialog_id, prev_phrase_id, phrase_id )
  if not have_good_wpn then
    have_good_wpn = find_good_wpn()
  end
  local sect = have_weapon[ tonumber( phrase_id ) - 1000 ]
  return have_good_wpn[ sect ] ~= nil
end


function v_take_wpn( fs, ss, dialog_id, phrase_id )
  local wpn = have_weapon[ tonumber( phrase_id ) - 2000 ]
  local rew = get_u32( wpn, script_name() .. ".voron_wpn", 0 )
  ASSERT( rew > 0, "%s.voron_wpn not found", wpn )
  local item = table.remove( have_good_wpn[ wpn ], 1 )
  ogse.remove_item_from_inventory( item )
  news_manager.relocate_item( db.actor, "out", wpn )
  sak.create_items_actor( get_rnd_nagrad( nagrad[ "level_" .. rew ] ), 1 )
  have_good_wpn = nil
end



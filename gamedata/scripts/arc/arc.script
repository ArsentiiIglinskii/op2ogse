-- -*- mode: lua; coding: windows-1251-dos -*-

function remove_obj(obj_id)
  alife():release(alife():object(obj_id), true)
end


function remove_item( item_section )
  local obj
  for i = 0, db.actor:object_count() - 1 do
    local item = db.actor:object( i )
    if item:section() == item_section and db.actor:is_in_ruck( item ) then
      obj = item
      break
    end
  end
  ASSERT( obj, "[%s]: %s not found", script_name(), item_section )
  local cond = obj:condition()
  local sobj = alife():object( obj:id() )
  local cd
  if sobj then
    cd = sobj.custom_data
    if cd and cd ~= "" then
      cd = base64.enc( cd )
    else
      cd = nil
    end
  end
  ogse.remove_item_from_inventory( obj )
  return cond, cd
end


function give_item( item_section, cond, cd )
  local a    = db.actor
  local sobj = alife():create(
    item_section,
    a:position(), a:level_vertex_id(), a:game_vertex_id(), a:id()
  )
  sobj = alife():object( sobj.id )
  if cd and cd ~= "" then
    sobj.custom_data = base64.dec( cd )
  end
  if cond then
    local iitem = sobj:get_inventory_item()
    iitem.item_condition = cond
  end
  return sobj
end


